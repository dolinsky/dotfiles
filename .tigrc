# .tigrc
# http://jonas.nitro.dk/tig/manual.html
# https://github.com/jonas/tig/wiki/Bindings
set id-width = 8
set tab-size = 2
set line-graphics = utf-8
set git-colors = yes
set reference-format = (branch) <tag>

set main-view   =   line-number:no,interval:5 \
                    id:true \
                    date:relative \
                    author:abbreviated \
                    commit-title:yes,graph,refs,overflow=no
set refs-view   =   date:relative \
                    author:abbreviated \
                    id:true \
                    commit-title:yes,refs

# bindings
bind main B !git rebase -i %(commit)
# show diff on merge commit
bind diff 7 !git diff %(commit)^ %(commit) --color

# *color* 'area' 'fgcolor' 'bgcolor' '[attributes]'
# general
#
# Diff colors
color   diff-add    green   default
